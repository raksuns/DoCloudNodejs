<%
  @title = "Admin Dashboard :: Membership Maintenance"
  @stylesheets = [:admin]
  @javascripts = [:admin]
  @bodyclass   = 'admin_memberships'
%>
<div id="full_screen_form" class="full_page_background">
  <form action="/admin/manage_memberships" method="POST">
    <%= token_tag %>
    <h1>Modify Account Memberships</h1>
    <% if flash[:error] %>
      <div class="form_error login_error">
        <span>
          <%= flash[:error] %>
        </span>
      </div>
    <% end %>
    <div class="line">
      <div class="text_input">
        <div class="background">
          <div class="inner">
            <input type="text" name="email" id="email" />
          </div>
        </div>
      </div>
      <label for="email">
        Account Email:
      </label>
    </div>
    <div class="line">
        <div class="minibutton" id="submitbtn" onclick="$('#full_screen_form form').submit();">Find Account</div>
    </div>


  </form>
</div>
