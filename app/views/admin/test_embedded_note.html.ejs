<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <title></title>
  <link href="/note_embed/note_embed.css" media="screen" rel="stylesheet" type="text/css" />
  <script src="/note_embed/note_embed.js" type="text/javascript"></script>
  <script>
    window._ = dc._;
    window.dc.recordHit = "<%= DC.server_root(:ssl => false).sub('s3', 'www') %>/pixel.gif";
  </script>
</head>
<body style="margin:0; padding:0;">
  <div class="DC-embed-preview">


    <div id="DC-note-<%= @wide_note.id %>" style="width:690px;"></div>
    <script>
      dc.embed.loadNote('<%= DC.server_root(:force_ssl => true) %>/documents/<%= @document.id %>/annotations/<%= @wide_note.id %>.js');
    </script>

    <div id="DC-note-<%= @narrow_note.id %>" style="width:300px"></div>
    <script>
      dc.embed.loadNote('<%= DC.server_root(:force_ssl => true) %>/documents/<%= @document.id %>/annotations/<%= @narrow_note.id %>.js');
    </script>

    <div id="container" style="width:270px"></div>
    <script type="text/javascript">
      dc.embed.loadNote('<%= DC.server_root(:force_ssl => true) %>/documents/<%= @document.id %>/annotations/<%= @tiny_note.id %>.js', {
        container   : '#container'
      });
    </script>


</body>
</html>
